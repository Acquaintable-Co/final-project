<%= form_with model: @offer, url: offers_path, remote: true do |f| %>
        
  <%= f.text_field :offer_detail, id: 'offer_detail_field', class: 'input add-new-item', type: "text", placeholder: 'enter a new "fare" item here' %> 
  
  <%= f.submit 'save to "fare" list', id: 'offer_submit', class:"button save-entry is-warning" %>
   
<% end %>