<div class="app-container home">
  <div class="app-background">

    <div class="app-title">What's <br> Good <br> Here<span class="q-mark">?</span></div>

  <div class="fork-imageH mobile"></div>
  <div class="fork-imageH tabletV"></div>
  <div class="fork-imageV tabletH"></div> 
  <div class="fork-imageV desktop"></div>

  <div class="site-subhead">
    <div class="app-subhead is-mobile">Get to know <br>the local spots
    </div>

    <div class="app-subhead is-tablet-desktop">Get to know the local spots
    </div>
  </div>

  <div class="home-search-button-row">
    <div class="home-browse-button">
      <%= link_to 'see full list', browse_path, :class => 'button main is-mobile' %>
    </div>
    <div class="home-browse-button">
      <%= link_to 'see full list', browse_path, :class => 'button main is-large is-tablet-desktop' %>
    </div>
    <div class="home-geolocate-button">
      <%= link_to "what's nearby", nearby_path, :class => 'button main is-mobile' %>
    </div>
    <div class="home-geolocate-button">
      <%= link_to "what's nearby", nearby_path, :class => 'button main is-large is-tablet-desktop' %>
    </div>
  </div>

  <div class="home-search-area">

    <div class="field has-addons is-mobile">
      <div class="control">
        <%= form_tag(browse_path, method: :get) do %>
          <%= text_field_tag :restaurant, params[:restaurant], :class => 'input home-search-bar mobile is-mobile', :type => 'text', :placeholder => 'or find a venue'  %>
          <%= submit_tag 'Search', class: 'button is-mobile' %>
        <% end %>
      </div>
    </div>    

    <div class="field has-addons is-tablet-desktop">
      <div class="control">
        <%= form_tag(browse_path, method: :get) do %>
          <%= text_field_tag :restaurant, params[:restaurant], :class => 'input is-large home-search-bar is-tablet-desktop', :type => 'text', :placeholder => 'or find a venue'  %>
          <%= submit_tag 'Search', class: 'button is-tablet-desktop' %>
        <% end %>
      </div>
    </div>

   </div>

  </div>
</div>
